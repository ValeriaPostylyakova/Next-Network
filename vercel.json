{
	"version": 2,
	"builds": [
		{
			"src": "client/next.config.js",
			"use": "@vercel/next"
		},
		{
			"src": "server/src/server.ts",
			"use": "@vercel/node",
			"config": {
				"functions": true
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "server/src/server.ts"
		},
		{
			"src": "/(.*)",
			"dest": "client/$1"
		}
	],
	"scripts": {
		"postdeploy": "cd server && npx prisma migrate deploy && npx prisma generate",
		"copy-images": "cd server && node copy-images.js",
		"vercel-build": "cd server && npm run build"
	},
	"installCommand": "npm install",
	"buildCommand": "npm run vercel-build"
}
