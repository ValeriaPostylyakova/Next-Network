{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true
	},
	"include": ["src/**/*", "prisma"],
	"exclude": ["node_modules"]
}
