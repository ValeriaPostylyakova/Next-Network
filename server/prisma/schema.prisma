generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                  @id @default(autoincrement())
  email              String               @unique
  password           String
  isActivated        Boolean              @default(false)
  activationLink     String?
  phone              String?
  isOnline           String?
  imageUrl           String?
  firstname          String
  lastname           String
  identifier         String?              @unique
  jobTitle           String?
  role               UserRole             @default(USER)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  chatUsers          ChatUser[]
  friends            Friend[]
  posts              Post[]
  Session            Session[]
  stories            Story[]
  token              Token?
  unreadMessage      UnreadMessage[]
  friendsSuggestions FriendsSuggestions[] @relation("FriendsSuggestionsToUser")
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  socketId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Token {
  id           Int      @id @default(autoincrement())
  isActivated  Boolean  @default(false)
  refreshToken String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       Int      @unique
  user         User     @relation(fields: [userId], references: [id])
}

model Post {
  id           Int       @id @default(autoincrement())
  postImageUrl String?
  fullname     String
  jobTitle     String?
  userImageUrl String?
  likes        Int
  like         Boolean   @default(false)
  date         String?
  text         String?
  userId       Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  comments     Comment[]
  user         User      @relation(fields: [userId], references: [id])
}

model Comment {
  id         Int      @id @default(autoincrement())
  username   String
  userId     Int
  userImgUrl String?
  text       String
  postId     Int?
  date       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Post       Post?    @relation(fields: [postId], references: [id])
}

model StoryItem {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  storyId   Int?
  Story     Story?   @relation(fields: [storyId], references: [id])
}

model Story {
  id        Int         @id @default(autoincrement())
  imageUrl  String?
  fullname  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  userId    Int?
  User      User?       @relation(fields: [userId], references: [id])
  items     StoryItem[]
}

model Chat {
  id            Int             @id @default(autoincrement())
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  chatUsers     ChatUser[]
  messages      Message[]
  unreadMessage UnreadMessage[]
}

model ChatUser {
  chatId Int
  userId Int
  chat   Chat @relation(fields: [chatId], references: [id])
  user   User @relation(fields: [userId], references: [id])

  @@id([chatId, userId])
}

model Message {
  id            Int             @id @default(autoincrement())
  text          String
  sender        String
  time          String?
  chatId        Int?
  isRead        Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  chat          Chat?           @relation(fields: [chatId], references: [id])
  unreadMessage UnreadMessage[]
}

model UnreadMessage {
  id        Int      @id @default(autoincrement())
  userId    Int
  messageId Int
  chatId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chat      Chat     @relation(fields: [chatId], references: [id])
  message   Message  @relation(fields: [messageId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Friend {
  id        Int      @id @default(autoincrement())
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
}

model FriendsSuggestions {
  id          Int      @id @default(autoincrement())
  imageUrl    String?
  fullname    String
  indificator String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User[]   @relation("FriendsSuggestionsToUser")
}

enum UserRole {
  USER
  ADMIN
}
